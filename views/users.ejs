<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Usuarios</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Gestión de Usuarios</h1>

        <!-- Formulario para crear un nuevo usuario -->
        <form action="/createUser" method="POST">
            <div class="form-group">
                <label for="nombre_usuario">Nombre de Usuario:</label>
                <input type="text" class="form-control" id="nombre_usuario" name="nombreUsuario" required>
            </div>
            <div class="form-group">
                <label for="contraseña_usuario">Contraseña:</label>
                <input type="password" class="form-control" id="contraseña_usuario" name="passwordUsuario" required>
            </div>
            <div class="form-group">
                <label for="rango">Rango:</label>
                <select class="form-control" id="rango" name="rango" required>
                    <option value="1">Admin</option>
                    <option value="0">Normal</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Crear Usuario</button>
        </form>

        <!-- Tabla para mostrar los usuarios -->
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>Nombre de Usuario</th>
                    <th>Rango</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.nombre_usuario %></td>
                        <td><%= user.rango == 1 ? 'Admin' : 'Normal' %></td>
                        <td>
                            <form action="/deleteUser" method="POST" style="display:inline;">
                                <input type="hidden" name="id_usuario" value="<%= user.id_usuario %>">
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
